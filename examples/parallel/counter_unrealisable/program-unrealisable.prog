program eventually__allow_grant {
    STATES {
        q0 : init
    }

    ENVIRONMENT EVENTS {

    }

    CONTROLLER EVENTS {
        inc
    }

    PROGRAM EVENTS {
        goal
    }

    VALUATION {
        x : integer := 1;
    }

    ENVIRONMENT TRANSITIONS {
        q0 -> q0 [x >= 0],
        q0 -> q0 [x < 0 # goal]
    }

    CONTROLLER TRANSITIONS {
        q0 -> q0 [inc $ x := x + 1]
    }
}